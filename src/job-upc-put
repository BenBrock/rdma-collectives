#!/bin/bash
#SBATCH -N 8
#SBATCH -C knl
#SBATCH -q debug
#SBATCH -J cs267-hw3-starter
#SBATCH -t 00:10:00

#OpenMP settings:
export OMP_NUM_THREADS=1
export OMP_PLACES=threads
export OMP_PROC_BIND=spread

#run the application:
srun -n 16 -c 4 --cpu_bind=cores ./AsynBcast 
srun -n 16 -c 4 --cpu_bind=cores ./upc_baseline 
srun -n 16 -c 4 --cpu_bind=cores ./MST_put